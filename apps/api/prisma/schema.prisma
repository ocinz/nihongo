generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid(7))
  email String @unique
  password String
  name String
  created_at DateTime @default(now())
  role Role?
}

enum Role {
  USER
  TEACHER
  STAFF
  ADMIN
}
model Card {
  id        String   @id @default(uuid(7))
  front_text String
  back_text  String
  example   String?

  created_at DateTime @default(now())

  card_reviews         CardReview[]
}
model CardReview {
  id String @id @default(uuid(7))
  card_id String
  card Card @relation(fields: [card_id], references: [id])
}